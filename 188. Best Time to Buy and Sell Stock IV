/* Question: find the best value for k transactions
1. if k>=n: 
    1) we can trade all the time.
    2) sum all profit and return
2. initial sell and hold
3. store the max of sell today or hold
4. update hold: find the max of buy today or not
5. return sell result
*/

class Solution {
public:
    int maxProfit(int k, vector<int>& prices) {
        int n = prices.size();
        if(n==1) return 0;
        int sum = 0;
        if(k>=n/2){
            for(int i=1; i<n; i++){
                if(prices[i-1] < prices[i]) sum += prices[i] - prices[i-1];
            }
            return sum;
        }

        vector<vector<int>> sell(k+1, vector<int> (n, 0));

        for(int i=1; i<=k; i++){
            int hold = -prices[0];
            for(int j=1; j<n; j++){
                sell[i][j] = max(sell[i][j-1], hold + prices[j]); //sell today stock
                hold = max(hold, sell[i-1][j] - prices[j]); //hold today stock
            }
        }
        return sell[k][n-1];
    }
};
