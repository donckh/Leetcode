/* Question: reverse the unsigned integer by binary
1. initial a result int
2. for loop 32times for unsigned int
3. shift the result num to left 
4. add the 1 from n
5. remove 1 from n
*/
class Solution {
public:
    int reverseBits(int n) {
        int result = 0;
        for(int i=0; i<32; i++){ //ensure leading zero reverse also
            result <<= 1; //move the last bit to the left
            result |= (n & 1); //take the last bit of n
            n >>= 1; //remove the last bit
        }
        return result;
    }
};
