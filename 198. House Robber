/* Question: find the largest non adjacent sum
1. initial nums[1] and record max at nums[1]
2. go through the nums and record max sum
3. return the nums[n-1]
*/

class Solution {
public:
    int rob(vector<int>& nums) {
        if(nums.size() == 1) return nums[0];
        nums[1] = max(nums[0], nums[1]);

        for(int i=2; i<nums.size(); i++){
            nums[i] = max(nums[i-1], nums[i] + nums[i-2]);
        }
        return nums[nums.size()-1];
    }
};
