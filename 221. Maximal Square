/* Question: find the largest square of matrix
1. initial 1st row and col
2. check the square of matrix
    1) store the min square at dp
    2) store maxLen
3. return the max size of square
*/

class Solution {
public:
    int maximalSquare(vector<vector<char>>& matrix) {
        int m = matrix.size(), n = matrix[0].size();
        vector<vector<int>> dp(m+1, vector<int>(n+1));
        for(int i=0; i<m; i++) if(matrix[i][0]==1) dp[i][0]=1;
        for(int j=0; j<n; j++) if(matrix[0][j]==1) dp[0][j]=1;

        int maxLen = 0;
        for(int i=1; i<=m; i++){
            for(int j=1; j<=n; j++){
                if(matrix[i-1][j-1]=='1'){
                    dp[i][j] = min({dp[i-1][j-1], dp[i-1][j], dp[i][j-1]}) + 1;
                    maxLen = max(maxLen, dp[i][j]);
                }
            }
        }
        return maxLen * maxLen;
    }
};
