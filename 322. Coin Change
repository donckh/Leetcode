/* Question: find the min combination of amuount from coins
1. initial a vector<int>
2. num[0] = 0
3. if(i - j >= 0) update num[i]
4. return the result if num[amount] != amount + 1
*/

class Solution {
public:
    int coinChange(vector<int>& coins, int amount) {
        if(amount == 0) return 0;
        vector<int> num(amount + 1, amount + 1);
        num[0] = 0;
        for(int i=1; i<=amount; i++){
            for(int j: coins){
                if(i-j>=0) num[i] = min(num[i], num[i-j] + 1);
            }
        }
        return num[amount] == amount + 1 ? -1 : num[amount];
    }
};
