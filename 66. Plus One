/* Question: use array to calculate a large num + 1, return result by array
1. return result+1 if the last digit is not 9
2. use c = 1 to add 1 in array
3. if c == 1 after loop
4. insert 1 at the begining()
*/


class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
        int size = digits.size()-1, c = 1;
        if(digits[size]!= 9){
            digits[size] += 1;
            return digits;
        }

        for(int i=size; i>=0; i--){
            int temp = digits[i] + c;
            c = temp / 10;
            digits[i] = temp % 10;
            if(c==0) break;
        }
        if(c==1) digits.insert(digits.begin(), 1);
        return digits;
    }
};
