/*Question: write a class to find sqrt of x
1st method: binary search (end = x/2)
2nd method: Newtonâ€™s Method (r = (r + x / r) / 2;)
*/
// O(log n)
class Solution {
public:
    int mySqrt(int x) {
        if(x < 2) return x;
        int start = 0, end = x/2;
        int ans;
        while(start <= end){
            long mid = start + (end - start) / 2;
            if(mid * mid <= x){
                ans = mid;
                start = mid + 1;
            }
            else end = mid - 1;
        }
        return ans;
    }
};

