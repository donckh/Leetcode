/* Question: remove appear more than twice element
1. return num.size() if size less than or equal to 2
2. start to check element from index 2:
    1) if element duplicate, i++
    2) else update element to new location and cnt++
*/
class Solution {
public:
    int removeDuplicates(vector<int>& nums) {
        int n = nums.size();
        if(n<3) return n;
        int cnt = 2;
        for(int i=2; i<n; i++){
            if(nums[i]!=nums[cnt-2]){
                nums[cnt]=nums[i];
                cnt++;
            }
        }
        return cnt;
    }
};
