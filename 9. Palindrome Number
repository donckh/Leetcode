/* Question: check if the given num is palindrome(from left to right and right to left are the same)
method 1: use math
1. take every digit from x to right if x>right
2. return true if x==right or right/10==x (odd length)
method 2: convert to string compare by char
*/

class Solution {
public:
    bool isPalindrome(int x) {
        if(x<0 || (x%10==0 && x!=0)) return false;
        int right = 0;
        while(x > right){
            right = right*10 + x%10;
            x /= 10;
        }
        return (x == right) || (right/10 == x);
    }
};

